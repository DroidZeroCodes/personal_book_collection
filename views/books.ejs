<%- include('partials/header.ejs') %>

    <main class="container py-5">
        <div class="row mb-5 align-items-end">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold text-dark">My Library</h1>
                <p class="text-secondary fs-5 mb-0">Manage your collection and track your progress.</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a href="/oli/search" class="btn btn-dark rounded-pill px-4 shadow-sm">
                    <i class="bi bi-plus-lg me-2"></i>Find New Books
                </a>
            </div>
        </div>

        <% const statusMap={ 'not_started' : { text: 'Not Started' , class: 'bg-secondary-subtle text-secondary' ,
            icon: 'bi-bookmark' }, 'reading' : { text: 'Reading' , class: 'bg-primary-subtle text-primary' ,
            icon: 'bi-book' }, 'finished' : { text: 'Finished' , class: 'bg-success-subtle text-success' ,
            icon: 'bi-check-circle' }, 'dropped' : { text: 'Dropped' , class: 'bg-danger-subtle text-danger' ,
            icon: 'bi-x-circle' } }; %>

            <% if (books && books.length> 0) { %>

                <div class="d-flex flex-column gap-4">
                    <% books.forEach(function(book) { const currentStatusKey=book.status && statusMap[book.status] ?
                        book.status : 'not_started' ; const currentStatus=statusMap[currentStatusKey]; %>

                        <div class="card border-0 shadow-sm rounded-4 overflow-hidden transition-hover">
                            <div class="row g-0">

                                <div
                                    class="col-md-3 col-lg-2 bg-light d-flex align-items-center justify-content-center position-relative">
                                    <a href="/books/<%= book.id %>"
                                        class="w-100 h-100 d-flex justify-content-center align-items-center text-decoration-none">
                                        <% if (book.cover_edition_key) { %>
                                            <img src="https://covers.openlibrary.org/b/olid/<%= book.cover_edition_key %>-L.jpg"
                                                class="img-fluid object-fit-cover w-100 h-100" alt="<%= book.title %>"
                                                style="min-height: 200px; max-height: 250px;" loading="lazy">
                                            <% } else { %>
                                                <div class="p-5">
                                                    <i class="bi bi-book text-secondary fs-1"></i>
                                                </div>
                                                <% } %>
                                    </a>

                                    <div class="d-md-none position-absolute top-0 start-0 m-2">
                                        <span class="badge <%= currentStatus.class %> shadow-sm">
                                            <i class="bi <%= currentStatus.icon %>"></i>
                                        </span>
                                    </div>
                                </div>

                                <div class="col-md-9 col-lg-10">
                                    <div class="card-body p-4 d-flex flex-column h-100">

                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h4 class="card-title fw-bold mb-1">
                                                    <a href="/books/<%= book.id %>"
                                                        class="text-decoration-none text-dark hover-underline">
                                                        <%= book.title %>
                                                    </a>
                                                </h4>
                                                <p class="text-secondary mb-0">
                                                    <%= book.author %>
                                                </p>
                                            </div>
                                            <span
                                                class="d-none d-md-inline-flex badge <%= currentStatus.class %> px-3 py-2 rounded-pill align-items-center gap-2">
                                                <i class="bi <%= currentStatus.icon %>"></i>
                                                <%= currentStatus.text %>
                                            </span>
                                        </div>

                                        <% if (book.content) { %>
                                            <div class="bg-light rounded-3 p-3 my-3 border border-light-subtle">
                                                <div class="d-flex align-items-center gap-2 mb-2">
                                                    <i class="bi bi-quote text-secondary fs-4 lh-1"></i>
                                                    <span class="fw-bold text-uppercase fs-7 text-secondary small">Your
                                                        Review</span>
                                                </div>
                                                <p class="mb-0 text-dark fst-italic text-truncate-3-lines">
                                                    "<%= book.content %>"
                                                </p>
                                            </div>
                                            <% } else { %>
                                                <div class="my-auto py-2"></div>
                                                <% } %>

                                                    <div
                                                        class="mt-auto pt-3 border-top d-flex flex-wrap justify-content-between align-items-center gap-3">

                                                        <div class="d-flex align-items-center gap-2">
                                                            <% if (book.rating> 0) { %>
                                                                <div class="text-warning fs-5">
                                                                    <% for(let i=0; i < book.rating; i++) { %> <i
                                                                            class="bi bi-star-fill"></i>
                                                                        <% } %>
                                                                            <% for(let i=book.rating; i < 5; i++) { %>
                                                                                <i
                                                                                    class="bi bi-star text-secondary opacity-25"></i>
                                                                                <% } %>
                                                                </div>
                                                                <span class="text-secondary small fw-medium">(<%=
                                                                        book.rating %>/5)</span>
                                                                <% } else { %>
                                                                    <span class="text-secondary small fst-italic">No
                                                                        rating yet</span>
                                                                    <% } %>
                                                        </div>

                                                        <a href="/books/<%= book.id %>/review"
                                                            class="btn btn-outline-dark rounded-pill px-4 d-flex align-items-center gap-2">
                                                            <i class="bi bi-pencil-square"></i>
                                                            <%= (book.content || book.rating) ? 'Edit Review'
                                                                : 'Write Review' %>
                                                        </a>
                                                    </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>

                <% } else { %>
                    <div class="text-center py-5 bg-light rounded-4 border border-secondary-subtle">
                        <i class="bi bi-journals text-secondary display-1 mb-3"></i>
                        <h3>Your library is empty</h3>
                        <p class="text-secondary">Start searching to add books to your collection.</p>
                        <a href="/oli/search" class="btn btn-primary mt-2 rounded-pill px-4">
                            <i class="bi bi-search me-2"></i>Search Open Library
                        </a>
                    </div>
                    <% } %>
    </main>

    <style>
        /* Helper for line clamping the review text */
        .text-truncate-3-lines {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .hover-underline:hover {
            text-decoration: underline !important;
        }

        .transition-hover {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .transition-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
        }
    </style>

    <%- include('partials/footer.ejs') %>